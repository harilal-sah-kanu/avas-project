<% layout('layouts/boilerplate') %>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="mb-3 text-center display-5 fw-bold animate__animated animate__fadeInDown">
                    <%= post.title %>
                </h2>
                <div class="card mb-4 shadow-sm listing-card animate__animated animate__fadeInUp">
                    <div class="d-flex justify-content-center position-relative">
                        <img src="<%= post.image.url %>" class="card-img-top show-img rounded shadow-sm"
                            alt="listing-image"
                            style="height:320px; width:auto; max-width:100%; object-fit:cover; margin:auto; display:block;">
                        <span
                            class="position-absolute top-0 end-0 m-2 badge bg-success bg-gradient fs-6 animate__animated animate__bounceIn"><i
                                class="fa-solid fa-star me-1"></i> Featured</span>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between align-items-center mb-2 px-2">
                        <span class="badge bg-secondary"><i class="fa-solid fa-tag"></i>
                            <%= post.category %>
                        </span>
                    </div>
                    <div class="card-body py-3 px-2">
                        <div class="d-flex flex-wrap align-items-center mb-2 gap-2">
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-user"></i> <b>Owner:</b>
                                <%= post.owner.username %>
                            </span>
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-location-dot"></i>
                                <%= post.location %>,
                                    <%= post.country %>
                            </span>
                        </div>
                        <p class="card-text mb-2 fs-5 text-success fw-semibold">
                            &#8377;
                            <%= post.price.toLocaleString("en-NP") %>
                                <span class="badge bg-warning text-dark ms-2">per
                                    night</span>
                        </p>
                        <div class="mb-2 text-success" style="font-size:0.98em;">
                            <span class="tax-amount" style="display:block;"></span>
                        </div>
                        <!-- Calendar and Cart -->
                        <div id="calendarCart" data-price="<%= post.price %>">
                            <label class="form-label fw-semibold">Select your stay dates:</label>
                            <div id="bookingDates"></div>
                            <div id="bookingCart"></div>
                        </div>
                        <p class="card-text mb-2">
                            <%= post.description %>
                        </p>
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-bed"></i> Roomy</span>
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-wifi"></i> Free
                                WiFi</span>
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-mug-hot"></i>
                                Breakfast</span>
                            <span class="badge bg-light text-dark border"><i class="fa-solid fa-tree"></i> Nature
                                View</span>
                        </div>
                    </div>
                </div>
                <% if (currUser && currUser._id.equals(post.owner._id)) { %>
                    <div class="d-flex mb-4 gap-2">
                        <form method="get" action="/listings/<%= post.id %>/edit">
                            <button class="btn btn-outline-primary">Edit</button>
                        </form>
                        <form method="POST" action="/listings/<%= post.id %>?_method=DELETE">
                            <button class="btn btn-outline-danger">Delete</button>
                        </form>
                    </div>


                    <% } %><!-- Review Section -->
                        <div class="review-section animate__animated animate__fadeInUp">
                            <% if (currUser) { %>
                                <hr>
                                <h4 class="mb-3">Leave a Review</h4>
                                <form method="post" action="/listings/<%= post.id %>/reviews" novalidate
                                    class="needs-validation">
                                    <div class="mb-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <fieldset class="starability-slot">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                                value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1
                                                star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2
                                                stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3
                                                stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4
                                                stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5
                                                stars</label>
                                        </fieldset>
                                    </div>
                                    <div class="mb-3">
                                        <label for="comment" class="form-label">Comments</label>
                                        <textarea name="review[comment]" id="comment" cols="30" rows="4"
                                            class="form-control" required
                                            placeholder="Share your experience..."></textarea>
                                        <div class="invalid-feedback">We value your feedback!
                                            Please share your thoughts
                                            about your visit.</div>
                                    </div>
                                    <button class="btn btn-outline-dark">Submit</button>
                                </form>


                                <% } %>
                                    <hr>
                                    <h5 class="mb-3">All Reviews</h5>
                                    <div class="row g-3">
                                        <% if (post.reviews.length===0) { %>
                                            <div class="col-12 text-center text-muted">No reviews yet.
                                                Be the first to
                                                review!</div>


                                            <% } %>
                                                <% for (let review of post.reviews) { %>
                                                    <div class="col-12 col-md-6">
                                                        <div
                                                            class="card review-card shadow-sm h-100 border-0 bg-light animate__animated animate__fadeIn">
                                                            <div class="card-body d-flex flex-column justify-content-between"
                                                                style="min-height: 180px;">
                                                                <div class="d-flex align-items-center mb-3 gap-2">
                                                                    <i
                                                                        class="fa-solid fa-user-circle fa-2x text-secondary"></i>
                                                                    <h6 class="card-title mb-0 flex-grow-1 ms-2"
                                                                        style="font-size:1.1rem;">
                                                                        <%= review.author.username %>
                                                                    </h6>
                                                                    <% if (currUser && review.author &&
                                                                        currUser._id.equals(review.author._id)) { %>
                                                                        <form class="ms-2"
                                                                            action="/listings/<%= post._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                                            method="post" style="display:inline;">
                                                                            <button
                                                                                class="btn btn-sm btn-outline-danger"
                                                                                title="Delete Review">
                                                                                <i class="fa-solid fa-trash"></i>
                                                                            </button>
                                                                        </form>


                                                                        <% } %>
                                                                </div>
                                                                <p class="card-text mb-3" style="font-size: 1.05rem;">
                                                                    <%= review.comment %>
                                                                </p>
                                                                <div class="d-flex align-items-center mt-auto">
                                                                    <% for (let i=1; i <=5; i++) { %>
                                                                        <% if (i <=review.rating) { %>
                                                                            <i
                                                                                class="fa-solid fa-star text-warning"></i>
                                                                            <% } else { %><i
                                                                                    class="fa-regular fa-star text-warning"></i>


                                                                                <% } %>

                                                                                    <% } %><span
                                                                                            class="ms-2 badge bg-light text-dark border"
                                                                                            style="font-size:0.95rem;">
                                                                                            <%= review.rating %>/5
                                                                                        </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <% } %>
                                    </div>
                        </div>
            </div>
        </div>
    </div>
    <!-- Similar Properties Section -->
    <div class="container my-5">
        <h4 class="mb-4 text-center">Similar Properties</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <% if (typeof similarListings !=='undefined' && similarListings.length> 0) { %>
                <% similarListings.forEach(function(list) { %>
                    <div class="col">
                        <a href="/listings/<%= list._id %>" class="listing-link">
                            <div class="card h-100 shadow-sm listing-card">
                                <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image"
                                    style="height: 160px; object-fit: cover;">
                                <div class="card-body">
                                    <h6 class="card-title mb-2">
                                        <%= list.title %>
                                    </h6>
                                    <span class="badge bg-secondary mb-2"><i class="fa-solid fa-tag"></i>
                                        <%= list.category %>
                                    </span>
                                    <p class="card-text mb-1">&#8377;
                                        <%= list.price.toLocaleString('en-NP') %>
                                            / night
                                    </p>
                                    <p class="card-text text-muted mb-0" style="font-size:0.95em;">
                                        <%= list.location %>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-12 text-center text-muted">No similar properties found.
                            </div>


                            <% } %>
        </div>
    </div>
    <script src="/js/calendarCart.js"></script>
    <script>
        // Favorite logic using localStorage
        function toggleFavorite(listingId) {
            let favs = JSON.parse(localStorage.getItem('favorites') || '[]');
            if (favs.includes(listingId)) {
                favs = favs.filter(id => id !== listingId);
            } else {
                favs.push(listingId);
            }
            localStorage.setItem('favorites', JSON.stringify(favs));
            document.querySelector('.favorite-btn').classList.toggle('active');
        }
        // Show tax price
        const price = Number("<%= post.price %>");
        const TAX_RATE = 0.13;
        const taxEl = document.querySelector('.tax-amount');
        if (taxEl) {
            const total = price + price * TAX_RATE;
            taxEl.innerHTML =
                `Total after tax: <b>&#8377; ${total.toLocaleString('en-NP', { maximumFractionDigits: 2 })}</b> / night`;
        }
    </script>