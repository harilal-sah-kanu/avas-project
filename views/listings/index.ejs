<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/css/listings.css">

    <div id="filters" class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 d-flex flex-wrap justify-content-start justify-content-md-center align-items-center">
                <div id="filterSliderWrapper">
                    <button id="leftArrow" class="arrow-btn" aria-label="Previous" tabindex="0">
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <div id="filterSlider">
                        <div class="filter">
                            <div><i class="fa-solid fa-fire"></i></div>
                            <p>Trending</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-bed"></i></div>
                            <p>Rooms</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-city"></i></div>
                            <p>Iconic Cities</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-mountain-sun"></i></div>
                            <p>Mountains</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-brands fa-fort-awesome"></i></div>
                            <p>Castle</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-person-swimming"></i></div>
                            <p>Arctics</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-tent"></i></div>
                            <p>Camping</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-cow"></i></div>
                            <p>Farms</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-hotel"></i></div>
                            <p>Hotels</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-umbrella-beach"></i></div>
                            <p>Beach</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-tree"></i></div>
                            <p>Nature</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-snowflake"></i></div>
                            <p>Winter</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-water"></i></div>
                            <p>Lake</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-building"></i></div>
                            <p>Apartment</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-house"></i></div>
                            <p>House</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-mug-hot"></i></div>
                            <p>Breakfast</p>
                        </div>
                        <!-- Add more icons as needed -->
                    </div>
                    <button id="rightArrow" class="arrow-btn" aria-label="Next" tabindex="0">
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                </div>
                <div class="tax-toggle ms-auto">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Green Environment Banner Carousel (Improved Images) -->
    <div id="greenCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="4000">
        <div class="carousel-inner rounded shadow-lg position-relative" style="overflow:hidden;">
            <div class="carousel-item active">
                <div class="banner-img-wrapper position-relative" style="background:#e0ffe7;">
                    <img src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=1200&q=80"
                        class="d-block w-100" style="height: 270px; object-fit: cover; filter: brightness(0.85);"
                        alt="Green Forest" onerror="this.style.display='none'">
                    <div class="banner-gradient-overlay position-absolute top-0 start-0 w-100 h-100"
                        style="background:linear-gradient(90deg,rgba(34,197,94,0.55) 0%,rgba(255,255,255,0.05) 100%);">
                    </div>
                    <div
                        class="carousel-caption d-flex flex-column align-items-start justify-content-center h-100 ps-4">
                        <h3 class="fw-bold text-white mb-2" style="text-shadow:0 2px 12px #166534b0;">Explore Green
                            Destinations</h3>
                        <p class="lead text-white mb-3" style="text-shadow:0 2px 8px #166534a0;">Book eco-friendly stays
                            and help preserve nature's
                            beauty for the future.</p>
                        <a href="https://cleantogreen.in/" class="btn btn-green-gradient px-4 py-2 fw-bold shadow">Join the
                            Campaign <i class="fa-solid fa-seedling ms-2"></i></a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="banner-img-wrapper position-relative" style="background:#e0ffe7;">
                    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1200&q=80"
                        class="d-block w-100" style="height: 270px; object-fit: cover; filter: brightness(0.85);"
                        alt="Eco Resort" onerror="this.style.display='none'">
                    <div class="banner-gradient-overlay position-absolute top-0 start-0 w-100 h-100"
                        style="background:linear-gradient(90deg,rgba(16,185,129,0.55) 0%,rgba(255,255,255,0.05) 100%);">
                    </div>
                    <div
                        class="carousel-caption d-flex flex-column align-items-start justify-content-center h-100 ps-4">
                        <h3 class="fw-bold text-white mb-2" style="text-shadow:0 2px 12px #166534b0;">Travel Green, Live
                            Clean</h3>
                        <p class="lead text-white mb-3" style="text-shadow:0 2px 8px #166534a0;">Choose properties that
                            care for the environment
                            and your well-being.</p>
                        <a href="/listings?category=Nature" class="btn btn-green-gradient px-4 py-2 fw-bold shadow">See
                            Nature Stays <i class="fa-solid fa-leaf ms-2"></i></a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="banner-img-wrapper position-relative" style="background:#e0ffe7;">
                    <img src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=1200&q=80"
                        class="d-block w-100" style="height: 270px; object-fit: cover; filter: brightness(0.85);"
                        alt="Green Lake" onerror="this.style.display='none'">
                    <div class="banner-gradient-overlay position-absolute top-0 start-0 w-100 h-100"
                        style="background:linear-gradient(90deg,rgba(34,197,94,0.55) 0%,rgba(255,255,255,0.05) 100%);">
                    </div>
                    <div
                        class="carousel-caption d-flex flex-column align-items-start justify-content-center h-100 ps-4">
                        <h3 class="fw-bold text-white mb-2" style="text-shadow:0 2px 12px #166534b0;">Every Booking
                            Plants a Tree</h3>
                        <p class="lead text-white mb-3" style="text-shadow:0 2px 8px #166534a0;">Support our mission to
                            make travel sustainable
                            and give back to the planet.</p>
                        <a href="https://cleantogreen.in/" class="btn btn-green-gradient px-4 py-2 fw-bold shadow">Learn More <i
                                class="fa-solid fa-tree ms-2"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#greenCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#greenCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Booking Banner Section -->
    <div class="container-fluid my-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10">
                <div class="checkout-banner d-flex flex-column flex-md-row align-items-center justify-content-between p-4 rounded shadow-sm"
                    style="background: linear-gradient(90deg, #ffb2c1 0%, #fff 100%);">
                    <div class="d-flex align-items-center mb-3 mb-md-0">
                        <i class="fa-solid fa-arrow-right-to-city fa-2x text-danger me-3"></i>
                        <div>
                            <h5 class="mb-1 fw-bold">Ready to book your next stay?</h5>
                            <p class="mb-0 text-muted">Discover unique properties and book your dream getaway today!</p>
                        </div>
                    </div>
                    <a href="/listings" class="btn btn-lg btn-gradient px-4 py-2 fw-bold">Explore Properties <i
                            class="fa-solid fa-arrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Listings Section -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(list of allListing) { %>
            <%- include('_listingCard', { list: list }) %>
                <% } %>
    </div>

    <!-- Hidden form for category filtering by icon click -->
    <form id="categoryFilterForm" action="/listings" method="get" style="display:none;">
        <input type="hidden" name="category" id="categorySelect" value="">
    </form>

    <!-- Move main JS logic to external file -->
    <script src="/js/listingPage.js"></script>