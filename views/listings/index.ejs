<% layout('layouts/boilerplate') %>
    <style>
        #filters {
            margin-top: 2rem;
            margin-bottom: 1rem;
        }

        #filterSliderWrapper {
            display: flex;
            align-items: center;
            width: 100%;
            gap: 0.3rem;
        }

        #filterSlider {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            scrollbar-width: thin;
            scrollbar-color: #ff385c #fff;
            -webkit-overflow-scrolling: touch;
            gap: 0.3rem;
            width: 100%;
            max-width: 100vw;
            padding-bottom: 2px;
        }

        #filterSlider:focus {
            outline: none !important;
            box-shadow: none !important;
        }

        #filterSlider::-webkit-scrollbar {
            height: 5px;
        }

        #filterSlider::-webkit-scrollbar-thumb {
            background: #ff385c;
            border-radius: 4px;
        }

        .filter {
            flex: 0 0 auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
            padding: 0.5rem 0.7rem;
            margin: 0.2rem 0.3rem;
            transition: transform 0.2s, box-shadow 0.2s, opacity 0.2s, background 0.2s;
            opacity: 0.85;
            min-width: unset;
            width: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            cursor: pointer;
            position: relative;
            text-align: center;
            white-space: nowrap;
            font-size: 0.95rem;
        }

        .filter:hover,
        .filter.active {
            opacity: 1;
            transform: translateY(-4px) scale(1.05) rotate(-1deg);
            box-shadow: 0 4px 12px rgba(255, 56, 92, 0.15);
            background: #ffe5ec;
        }

        .filter i {
            font-size: 1.5rem;
            color: #ff385c;
            margin-bottom: 0.2rem;
            transition: transform 0.2s, color 0.2s;
        }

        .filter:hover i {
            transform: scale(1.12) rotate(-6deg);
            color: #d72660;
        }

        .filter p {
            font-size: 0.95rem;
            margin: 0;
            color: #333;
            font-weight: 500;
            letter-spacing: 0.3px;
        }

        .arrow-btn {
            margin: 0 0.2rem;
            padding: 0.3rem 0.5rem;
            border-radius: 50%;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.10);
            transition: background 0.2s, box-shadow 0.2s, transform 0.2s, color 0.2s;
            color: #ff385c;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            z-index: 2;
            opacity: 0.95;
            outline: none !important;
            box-shadow: none !important;
        }

        .arrow-btn:focus {
            outline: none !important;
            box-shadow: none !important;
        }

        .arrow-btn:hover {
            background: #ff385c;
            color: #fff;
            box-shadow: 0 4px 16px rgba(255, 56, 92, 0.15);
            transform: scale(1.12);
            opacity: 1;
        }

        .arrow-btn[disabled] {
            opacity: 0.3;
            pointer-events: none;
        }

        .tax-toggle {
            display: flex;
            align-items: center;
            margin-left: 1rem;
        }

        .tax-info {
            font-size: 1rem;
            color: #198754;
            font-weight: 500;
            margin-top: 0.5rem;
            display: none;
        }

        .tax-info.show {
            display: block;
        }
    </style>

    <div id="filters" class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 d-flex flex-wrap justify-content-start justify-content-md-center align-items-center">
                <div id="filterSliderWrapper">
                    <button id="leftArrow" class="arrow-btn" aria-label="Previous" tabindex="0">
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <div id="filterSlider">
                        <div class="filter">
                            <div><i class="fa-solid fa-fire"></i></div>
                            <p>Trending</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-bed"></i></div>
                            <p>Rooms</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-city"></i></div>
                            <p>Iconic Cities</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-mountain-sun"></i></div>
                            <p>Mountains</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-brands fa-fort-awesome"></i></div>
                            <p>Castle</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-person-swimming"></i></div>
                            <p>Arctics</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-tent"></i></div>
                            <p>Camping</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-cow"></i></div>
                            <p>Farms</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-hotel"></i></div>
                            <p>Hotels</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-umbrella-beach"></i></div>
                            <p>Beach</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-tree"></i></div>
                            <p>Nature</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-snowflake"></i></div>
                            <p>Winter</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-water"></i></div>
                            <p>Lake</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-building"></i></div>
                            <p>Apartment</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-house"></i></div>
                            <p>House</p>
                        </div>
                        <div class="filter">
                            <div><i class="fa-solid fa-mug-hot"></i></div>
                            <p>Breakfast</p>
                        </div>
                        <!-- Add more icons as needed -->
                    </div>
                    <button id="rightArrow" class="arrow-btn" aria-label="Next" tabindex="0">
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                </div>
                <div class="tax-toggle ms-auto">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(list of allListing) { %>
            <a href="/listings/<%= list._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= list.title %>
                            </b>
                            <br>
                            <span class="price" data-price="<%= list.price %>">
                                &#8377; <%= list.price.toLocaleString("en-NP") %> / night
                            </span>
                            <span class="tax-amount" style="display:none; color:#198754; font-size:0.95em;"></span>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <script>
        const filterSlider = document.getElementById('filterSlider');
        const leftArrow = document.getElementById('leftArrow');
        const rightArrow = document.getElementById('rightArrow');
        const scrollAmount = 120; // px per click

        function updateArrows() {
            leftArrow.disabled = filterSlider.scrollLeft <= 0;
            rightArrow.disabled = filterSlider.scrollLeft + filterSlider.offsetWidth >= filterSlider.scrollWidth - 2;
        }

        rightArrow.addEventListener('click', () => {
            filterSlider.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        });
        leftArrow.addEventListener('click', () => {
            filterSlider.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        });
        filterSlider.addEventListener('scroll', updateArrows);
        window.addEventListener('resize', updateArrows);
        updateArrows();

        // Taxes toggle logic: show tax in each listing
        const taxSwitch = document.getElementById('switchCheckDefault');
        const priceElements = document.querySelectorAll('.price');
        const taxAmountElements = document.querySelectorAll('.tax-amount');
        const TAX_RATE = 0.13; // 13% tax

        function showTaxInListings() {
            priceElements.forEach((el, idx) => {
                const price = parseFloat(el.getAttribute('data-price'));
                const taxEl = taxAmountElements[idx];
                if (taxSwitch.checked) {
                    const total = price + price * TAX_RATE;
                    taxEl.innerHTML = `<br>Total after tax: <b>&#8377; ${total.toLocaleString("en-NP", { maximumFractionDigits: 2 })}</b> / night`;
                    taxEl.style.display = 'inline';
                } else {
                    taxEl.innerHTML = '';
                    taxEl.style.display = 'none';
                }
            });
        }
        taxSwitch.addEventListener('change', showTaxInListings);
    </script>