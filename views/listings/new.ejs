<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/listings.css">

<div class="form-page-container">
  <h1 class="form-page-title">Add Your Property</h1>
  
  <div class="form-card">
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title" class="form-label">Property Title</label>
        <input type="text" name="listing[title]" id="title" class="form-control"
          placeholder="e.g., Cozy Mountain Retreat" required />
        <div class="valid-feedback">Great title!</div>
        <div class="invalid-feedback">Please provide a title for your property.</div>
      </div>

      <div class="form-group">
        <label for="desc" class="form-label">Description</label>
        <textarea name="listing[description]" id="desc" class="form-control"
          placeholder="Describe the property, amenities, and nearby attractions" required></textarea>
        <div class="invalid-feedback">Please provide a detailed description.</div>
      </div>

      <div class="form-group">
        <label for="images" class="form-label">Property Images</label>
        <input type="file" name="listing[images]" id="images" class="form-control" required
          accept="image/png, image/jpeg, image/jpg" multiple />
        <div class="form-text">Upload up to 5 images. Max size: 2MB each. Formats: JPG, JPEG, PNG</div>
        <div class="invalid-feedback">Please upload at least one image of your property.</div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="price" class="form-label">Price per Night</label>
          <input type="number" name="listing[price]" placeholder="5000" id="price" class="form-control" required />
          <div class="invalid-feedback">Price is required.</div>
        </div>

        <div class="form-group">
          <label for="cntry" class="form-label">Country</label>
          <input type="text" name="listing[country]" id="cntry" class="form-control"
            placeholder="e.g., India" required />
          <div class="invalid-feedback">Please enter a country.</div>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" id="location" class="form-control"
            placeholder="e.g., Goa Beach" required />
          <div class="invalid-feedback">Location is required.</div>
        </div>

        <div class="form-group">
          <label for="cntry" class="form-label">Country</label>
          <input type="text" name="listing[country]" id="cntry" class="form-control"
            placeholder="e.g., India" required />
          <div class="invalid-feedback">Please enter a country.</div>
        </div>
      </div>

      <div class="form-group">
        <label for="category" class="form-label">Property Category</label>
        <input type="hidden" name="listing[category]" id="category" required>
        <div class="category-grid" style="grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));">
          <div class="category-option" data-category="Trending">
            <i class="fa-solid fa-fire"></i>
            <span>Trending</span>
          </div>
          <div class="category-option" data-category="Rooms">
            <i class="fa-solid fa-bed"></i>
            <span>Rooms</span>
          </div>
          <div class="category-option" data-category="Iconic Cities">
            <i class="fa-solid fa-city"></i>
            <span>Cities</span>
          </div>
          <div class="category-option" data-category="Mountains">
            <i class="fa-solid fa-mountain-sun"></i>
            <span>Mountains</span>
          </div>
          <div class="category-option" data-category="Castle">
            <i class="fa-brands fa-fort-awesome"></i>
            <span>Castle</span>
          </div>
          <div class="category-option" data-category="Beach">
            <i class="fa-solid fa-umbrella-beach"></i>
            <span>Beach</span>
          </div>
          <div class="category-option" data-category="Camping">
            <i class="fa-solid fa-tent"></i>
            <span>Camping</span>
          </div>
          <div class="category-option" data-category="Farms">
            <i class="fa-solid fa-cow"></i>
            <span>Farms</span>
          </div>
          <div class="category-option" data-category="Nature">
            <i class="fa-solid fa-tree"></i>
            <span>Nature</span>
          </div>
          <div class="category-option" data-category="Lake">
            <i class="fa-solid fa-water"></i>
            <span>Lake</span>
          </div>
          <div class="category-option" data-category="Winter">
            <i class="fa-solid fa-snowflake"></i>
            <span>Winter</span>
          </div>
          <div class="category-option" data-category="House">
            <i class="fa-solid fa-house"></i>
            <span>House</span>
          </div>
          <div class="category-option" data-category="Apartment">
            <i class="fa-solid fa-building"></i>
            <span>Apartment</span>
          </div>
        </div>
        <div class="invalid-feedback">Please select a category.</div>
      </div>

      <button type="submit" class="btn-submit">
        <i class="fa-solid fa-plus-circle" style="margin-right: 0.5rem;"></i>
        Create Listing
      </button>
    </form>
  </div>
</div>

<script>
  // Category selection handler
  document.querySelectorAll('.category-option').forEach(option => {
    option.addEventListener('click', function() {
      // Remove selected class from all options
      document.querySelectorAll('.category-option').forEach(opt => opt.classList.remove('selected'));
      // Add selected class to clicked option
      this.classList.add('selected');
      // Update hidden input value
      document.getElementById('category').value = this.dataset.category;
    });
  });
</script>