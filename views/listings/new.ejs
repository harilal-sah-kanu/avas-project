<% layout('layouts/boilerPlate') %>

  <div class="row mt-3">
    <div class="col-8 offset-2">

      <body>
        <h1>Add Your Property to the Marketplace</h1>
        <br />
        <form method="post" , action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title: </label><br />
            <input type="text" name="listing[title]" id="title" class="form-control"
              placeholder="Add an attractive title (e.g., Cozy Mountain Retreat)" required />
            <div class="valid-feedback">Great pick, Looks great!</div>
            <div class="invalid-feedback">Title is a must!</div>
          </div>

          <div class="mb-3">
            <label for="desc" class="form-label">Enter Description: </label><br />
            <textarea name="listing[description]" id="desc" class="form-control"
              placeholder="Describe the property, amenities, and nearby attractions" required></textarea>
            <div class="invalid-feedback">Please provide a detailed description to attract more interest.</div>  
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Upload Image: </label><br />
            <input type="file" name="listing[image]" id="image" class="form-control" required/>
            <div class="valid-feedback">Image selected successfully!</div>
            <div class="invalid-feedback">Please upload an image of your property.</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-5">
              <label for="price" class="form-label">Price: </label><br />
              <input name="listing[price]" placeholder="&#8377; 5000 / night" id="price"
                class="form-control" required />
              <div class="valid-feedback">Looks perfect!</div>
              <div class="invalid-feedback">Price is required!</div>
            </div>

            <div class="mb-3 col-md-7">
              <label for="cntry" class="form-label">Country: </label> <br />
              <input type="text" name="listing[country]" id="cntry" class="form-control"
                placeholder="Enter the country (e.g., Nepal)" required />
              <div class="valid-feedback">Spot on!</div>
              <div class="invalid-feedback">Add a country!</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Enter Location: </label><br />
            <input type="text" name="listing[location]" id="location" class="form-control"
              placeholder="Enter the city or area (e.g., Pokhara Lakeside)" required />
            <div class="valid-feedback">Perfect location!</div>
            <div class="invalid-feedback">Location is required!</div>
          </div>

          <button class="btn btn-dark add-btn mt-3">Submit</button>
        </form>
      </body>
    </div>
  </div>