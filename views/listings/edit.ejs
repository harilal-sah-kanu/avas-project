<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/listings.css">

<div class="form-page-container">
    <h1 class="form-page-title">Edit Your Property</h1>
    
    <div class="form-card">
        <form method="post" action="/listings/<%= curntListing.id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            
            <div class="form-group">
                <label for="title" class="form-label">Property Title</label>
                <input type="text" name="listing[title]" id="title" value="<%= curntListing.title %>" class="form-control" required>
                <div class="invalid-feedback">Title is required.</div>
            </div>

            <div class="form-group">
                <label for="desc" class="form-label">Description</label>
                <textarea name="listing[description]" id="desc" class="form-control" required><%= curntListing.description.trim() %></textarea>
                <div class="invalid-feedback">Please provide a description.</div>
            </div>

            <div class="form-group">
                <label class="form-label">Current Images</label>
                <div style="display: flex; flex-wrap: wrap; gap: 0.75rem; margin-top: 0.5rem;">
                    <% if (orgImages && orgImages.length > 0) { %>
                        <% orgImages.forEach(function(img) { %>>
                            <div style="width: 140px; height: 100px; border-radius: 6px; overflow: hidden; border: 1px solid #e5e7eb;">
                                <img src="<%= img.url %>" alt="property_image" style="width: 100%; height: 100%; object-fit: cover;">
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <div class="form-group">
                <label for="img" class="form-label">Upload New Images</label>
                <input type="file" name="listing[images]" id="img" class="form-control" accept="image/png, image/jpeg, image/jpg" multiple>
                <div class="form-text">Max size: 2MB. Formats: JPG, JPEG, PNG</div>
            </div>

            <div class="form-group">
                <label for="price" class="form-label">Price per Night</label>
                <input type="number" name="listing[price]" id="price" value="<%= curntListing.price %>" class="form-control" required>
                <div class="invalid-feedback">Price is required.</div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" id="location" value="<%= curntListing.location %>" class="form-control" required>
                    <div class="invalid-feedback">Location is required.</div>
                </div>

                <div class="form-group">
                    <label for="cntry" class="form-label">Country</label>
                    <input type="text" name="listing[country]" id="cntry" value="<%= curntListing.country %>" class="form-control" required>
                    <div class="invalid-feedback">Country is required.</div>
                </div>
            </div>

            <div class="form-group">
                <label for="category" class="form-label">Property Category</label>
                <input type="hidden" name="listing[category]" id="category" value="<%= curntListing.category %>" required>
                <div class="category-grid" style="grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));">
                    <div class="category-option <%= curntListing.category === 'Trending' ? 'selected' : '' %>" data-category="Trending">
                        <i class="fa-solid fa-fire"></i>
                        <span>Trending</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Rooms' ? 'selected' : '' %>" data-category="Rooms">
                        <i class="fa-solid fa-bed"></i>
                        <span>Rooms</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Iconic Cities' ? 'selected' : '' %>" data-category="Iconic Cities">
                        <i class="fa-solid fa-city"></i>
                        <span>Cities</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Mountains' ? 'selected' : '' %>" data-category="Mountains">
                        <i class="fa-solid fa-mountain-sun"></i>
                        <span>Mountains</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Castle' ? 'selected' : '' %>" data-category="Castle">
                        <i class="fa-brands fa-fort-awesome"></i>
                        <span>Castle</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Beach' ? 'selected' : '' %>" data-category="Beach">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <span>Beach</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Camping' ? 'selected' : '' %>" data-category="Camping">
                        <i class="fa-solid fa-tent"></i>
                        <span>Camping</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Farms' ? 'selected' : '' %>" data-category="Farms">
                        <i class="fa-solid fa-cow"></i>
                        <span>Farms</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Nature' ? 'selected' : '' %>" data-category="Nature">
                        <i class="fa-solid fa-tree"></i>
                        <span>Nature</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Lake' ? 'selected' : '' %>" data-category="Lake">
                        <i class="fa-solid fa-water"></i>
                        <span>Lake</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Winter' ? 'selected' : '' %>" data-category="Winter">
                        <i class="fa-solid fa-snowflake"></i>
                        <span>Winter</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'House' ? 'selected' : '' %>" data-category="House">
                        <i class="fa-solid fa-house"></i>
                        <span>House</span>
                    </div>
                    <div class="category-option <%= curntListing.category === 'Apartment' ? 'selected' : '' %>" data-category="Apartment">
                        <i class="fa-solid fa-building"></i>
                        <span>Apartment</span>
                    </div>
                </div>
                <div class="invalid-feedback">Please select a category.</div>
            </div>

        <div class="form-actions">
                </div>
            </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">
                <i class="fa-solid fa-floppy-disk"></i>
                Update Listing
            </button>
            <a href="/listings/<%= curntListing.id %>" class="btn-cancel">
                <i class="fa-solid fa-xmark"></i>
                Cancel
            </a>
        </div>
    </form>
</div>
</div>

<script>
  // Category selection handler
  document.querySelectorAll('.category-option').forEach(option => {
    option.addEventListener('click', function() {
      // Remove selected class from all options
      document.querySelectorAll('.category-option').forEach(opt => opt.classList.remove('selected'));
      // Add selected class to clicked option
      this.classList.add('selected');
      // Update hidden input value
      document.getElementById('category').value = this.dataset.category;
    });
  });
</script>