<% layout('layouts/boilerplate') %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Property Details</h3>
            <br>
            <form method="post" action="/listings/<%= curntListing.id %>?_method=PUT" novalidate
                class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Property Title:</label><br>
                    <input type="text" name="listing[title]" id="title" value="<%= curntListing.title %>"
                        class="form-control" required>
                    <div class="valid-feedback">Title looks awesome!</div>
                    <div class="invalid-feedback">Don't forget the title!</div>
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Property Description:</label><br>
                    <textarea name="listing[description]" id="desc" class="form-control" required>
                        <%= curntListing.description %>
                    </textarea>
                    <div class="valid-feedback">Description is spot on!</div>
                    <div class="invalid-feedback">Add a description!</div>
                </div>

                <!-- Image preview to edit -->

                <div class="mb-3">
                    <label class="form-label">Current Property Images:</label>
                    <div class="d-flex flex-wrap gap-3 mt-2">
                        <% if (Array.isArray(orgImageUrl)) { %>
                            <% orgImageUrl.forEach(function(imgUrl) { %>
                                <div class="img-preview border rounded shadow-sm p-1"
                                    style="width: 140px; height: 100px; overflow: hidden; background: #f8f9fa;">
                                    <img src="<%= imgUrl %>" alt="property_image"
                                        class="img-fluid h-100 w-100 object-fit-cover">
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <div class="img-preview border rounded shadow-sm p-1"
                                            style="width: 140px; height: 100px; overflow: hidden; background: #f8f9fa;">
                                            <img src="<%= orgImageUrl %>" alt="property_image"
                                                class="img-fluid h-100 w-100 object-fit-cover">
                                        </div>
                                        <% } %>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="img" class="form-label">Upload New Images:</label><br>
                    <input type="file" name="listing[image]" id="img" class="form-control">
                    <div class="valid-feedback">Image Selected Properly!</div>
                    <div class="invalid-feedback">Add an image!</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-label">Price (per night):</label><br>
                        <input type="number" name="listing[price]" id="price" value="<%= curntListing.price %>"
                            class="form-control" required>
                        <div class="valid-feedback">Perfect price!</div>
                        <div class="invalid-feedback">Set a price!</div>
                    </div>

                    <div class="mb-3 col-md-7">
                        <label for="cntry" class="form-label">Country:</label> <br>
                        <input type="text" name="listing[country]" id="cntry" value="<%= curntListing.country %>"
                            class="form-control" required>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback">Add a country!</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location (City/Area):</label><br>
                    <input type="text" name="listing[location]" id="location" value="<%= curntListing.location %>"
                        class="form-control" required>
                    <div class="valid-feedback">Location is perfect!</div>
                    <div class="invalid-feedback">Add a location!</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Update</button> <br><br>
            </form>
        </div>
    </div>