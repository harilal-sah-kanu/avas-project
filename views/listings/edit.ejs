<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Property Details</h3>
            <br>
            <form method="post" action="/listings/<%= curntListing.id %>?_method=PUT" novalidate
                class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Property
                        Title:</label><br>
                    <input type="text" name="listing[title]" id="title" value="<%= curntListing.title %>"
                        class="form-control" required>
                    <div class="valid-feedback">Title looks awesome!</div>
                    <div class="invalid-feedback">Don't forget the title!</div>
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Property
                        Description:</label><br>
                    <textarea name="listing[description]" id="desc" class="form-control" required>
                        <%= curntListing.description %>
                    </textarea>
                    <div class="valid-feedback">Description is spot on!</div>
                    <div class="invalid-feedback">Add a description!</div>
                </div>

                <!-- Image preview to edit -->

                <div class="mb-3">
                    <label class="form-label">Current Property Images:</label>
                    <div class="d-flex flex-wrap gap-3 mt-2">
                        <% if (Array.isArray(orgImageUrl)) { %>
                            <% orgImageUrl.forEach(function(imgUrl) { %>
                                <div class="img-preview border rounded shadow-sm p-1"
                                    style="width: 140px; height: 100px; overflow: hidden; background: #f8f9fa;">
                                    <img src="<%= imgUrl %>" alt="property_image"
                                        class="img-fluid h-100 w-100 object-fit-cover">
                                </div>
                                <% }); %>
                                    <% } else if (orgImageUrl) { %>
                                        <div class="img-preview border rounded shadow-sm p-1"
                                            style="width: 140px; height: 100px; overflow: hidden; background: #f8f9fa;">
                                            <img src="<%= orgImageUrl %>" alt="property_image"
                                                class="img-fluid h-100 w-100 object-fit-cover">
                                        </div>
                                        <% } %>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="img" class="form-label">Upload New
                        Images:</label><br>
                    <input type="file" name="listing[image]" id="img" class="form-control"
                        accept="image/png, image/jpeg, image/jpg">
                    <div class="form-text text-muted">Max size: 2MB. Only JPG, JPEG,
                        PNG allowed.</div>
                    <div class="valid-feedback">Image Selected Properly!</div>
                    <div class="invalid-feedback">Add an image!</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-5">
                        <label for="price" class="form-label">Price (per
                            night):</label><br>
                        <input type="number" name="listing[price]" id="price" value="<%= curntListing.price %>"
                            class="form-control" required>
                        <div class="valid-feedback">Perfect price!</div>
                        <div class="invalid-feedback">Set a price!</div>
                    </div>

                    <div class="mb-3 col-md-7">
                        <label for="cntry" class="form-label">Country:</label> <br>
                        <input type="text" name="listing[country]" id="cntry" value="<%= curntListing.country %>"
                            class="form-control" required>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback">Add a country!</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location
                        (City/Area):</label><br>
                    <input type="text" name="listing[location]" id="location" value="<%= curntListing.location %>"
                        class="form-control" required>
                    <div class="valid-feedback">Location is perfect!</div>
                    <div class="invalid-feedback">Add a location!</div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Property Category:</label>
                    <select name="listing[category]" id="category" class="form-select" required>
                        <option value="">Select a category</option>
                        <option value="Trending" <%=curntListing.category==='Trending' ? 'selected' : '' %>>Trending
                        </option>
                        <option value="Rooms" <%=curntListing.category==='Rooms' ? 'selected' : '' %>>Rooms</option>
                        <option value="Iconic Cities" <%=curntListing.category==='Iconic Cities' ? 'selected' : '' %>
                            >Iconic Cities</option>
                        <option value="Mountains" <%=curntListing.category==='Mountains' ? 'selected' : '' %>>Mountains
                        </option>
                        <option value="Castle" <%=curntListing.category==='Castle' ? 'selected' : '' %>>Castle</option>
                        <option value="Arctics" <%=curntListing.category==='Arctics' ? 'selected' : '' %>>Arctics
                        </option>
                        <option value="Camping" <%=curntListing.category==='Camping' ? 'selected' : '' %>>Camping
                        </option>
                        <option value="Farms" <%=curntListing.category==='Farms' ? 'selected' : '' %>>Farms</option>
                        <option value="Hotels" <%=curntListing.category==='Hotels' ? 'selected' : '' %>>Hotels</option>
                        <option value="Beach" <%=curntListing.category==='Beach' ? 'selected' : '' %>>Beach</option>
                        <option value="Nature" <%=curntListing.category==='Nature' ? 'selected' : '' %>>Nature</option>
                        <option value="Winter" <%=curntListing.category==='Winter' ? 'selected' : '' %>>Winter</option>
                        <option value="Lake" <%=curntListing.category==='Lake' ? 'selected' : '' %>>Lake</option>
                        <option value="Apartment" <%=curntListing.category==='Apartment' ? 'selected' : '' %>>Apartment
                        </option>
                        <option value="House" <%=curntListing.category==='House' ? 'selected' : '' %>>House</option>
                        <option value="Breakfast" <%=curntListing.category==='Breakfast' ? 'selected' : '' %>>Breakfast
                        </option>
                    </select>
                    <div class="invalid-feedback">Please select a property category.</div>
                </div>

                <div class="mb-3">
                    <label for="features" class="form-label">Property Features / Amenities:</label>
                    <select name="listing[features]" id="features" class="form-select" multiple required>
                        <option value="WiFi" <%=curntListing.features && curntListing.features.includes('WiFi')
                            ? 'selected' : '' %>>WiFi</option>
                        <option value="Parking" <%=curntListing.features && curntListing.features.includes('Parking')
                            ? 'selected' : '' %>>Parking</option>
                        <option value="Pool" <%=curntListing.features && curntListing.features.includes('Pool')
                            ? 'selected' : '' %>>Pool</option>
                        <option value="Air Conditioning" <%=curntListing.features && curntListing.features.includes('Air
                            Conditioning') ? 'selected' : '' %>>Air Conditioning</option>
                        <option value="Pet Friendly" <%=curntListing.features && curntListing.features.includes('Pet
                            Friendly') ? 'selected' : '' %>>Pet Friendly</option>
                        <option value="Breakfast Included" <%=curntListing.features &&
                            curntListing.features.includes('Breakfast Included') ? 'selected' : '' %>>Breakfast Included
                        </option>
                        <option value="Kitchen" <%=curntListing.features && curntListing.features.includes('Kitchen')
                            ? 'selected' : '' %>>Kitchen</option>
                        <option value="Washer" <%=curntListing.features && curntListing.features.includes('Washer')
                            ? 'selected' : '' %>>Washer</option>
                        <option value="TV" <%=curntListing.features && curntListing.features.includes('TV') ? 'selected'
                            : '' %>>TV</option>
                        <option value="Balcony" <%=curntListing.features && curntListing.features.includes('Balcony')
                            ? 'selected' : '' %>>Balcony</option>
                        <option value="Garden" <%=curntListing.features && curntListing.features.includes('Garden')
                            ? 'selected' : '' %>>Garden</option>
                        <option value="Gym" <%=curntListing.features && curntListing.features.includes('Gym')
                            ? 'selected' : '' %>>Gym</option>
                        <option value="Fireplace" <%=curntListing.features &&
                            curntListing.features.includes('Fireplace') ? 'selected' : '' %>>Fireplace</option>
                        <option value="Wheelchair Accessible" <%=curntListing.features &&
                            curntListing.features.includes('Wheelchair Accessible') ? 'selected' : '' %>>Wheelchair
                            Accessible</option>
                        <option value="City View" <%=curntListing.features && curntListing.features.includes('City
                            View') ? 'selected' : '' %>>City View</option>
                        <option value="Mountain View" <%=curntListing.features &&
                            curntListing.features.includes('Mountain View') ? 'selected' : '' %>>Mountain View</option>
                        <option value="Historic Site Nearby" <%=curntListing.features &&
                            curntListing.features.includes('Historic Site Nearby') ? 'selected' : '' %>>Historic Site
                            Nearby</option>
                        <option value="Shopping District" <%=curntListing.features &&
                            curntListing.features.includes('Shopping District') ? 'selected' : '' %>>Shopping District
                        </option>
                        <option value="Adventure Activities" <%=curntListing.features &&
                            curntListing.features.includes('Adventure Activities') ? 'selected' : '' %>>Adventure
                            Activities</option>
                        <option value="Cultural Hotspot" <%=curntListing.features &&
                            curntListing.features.includes('Cultural Hotspot') ? 'selected' : '' %>>Cultural Hotspot
                        </option>
                        <option value="Family Friendly" <%=curntListing.features &&
                            curntListing.features.includes('Family Friendly') ? 'selected' : '' %>>Family Friendly
                        </option>
                        <option value="Romantic Getaway" <%=curntListing.features &&
                            curntListing.features.includes('Eco-Friendly') ? 'selected' : '' %>>Eco-Friendly</option>
                        <option value="Trip Package" <%=curntListing.features && curntListing.features.includes('Trip
                            Package') ? 'selected' : '' %>>Trip Package</option>
                        <option value="Guided Tours" <%=curntListing.features && curntListing.features.includes('Guided
                            Tours') ? 'selected' : '' %>>Guided Tours</option>
                    </select>
                    <div class="form-text">Hold Ctrl (Windows) or Cmd (Mac) to select multiple features.</div>
                    <div class="invalid-feedback">Please select at least one feature/amenity.</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Update</button> <br><br>
            </form>
        </div>
    </div>