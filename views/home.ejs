<% layout('layouts/boilerplate') %>

<!-- Modern Hero Section -->
<section class="hero-modern">
    <div class="hero-background"></div>
    <div class="hero-content-wrapper">
        <div class="hero-text">
            <h1 class="hero-main-title fade-in-up">
                Find Amazing Places to Stay
            </h1>
            <p class="hero-description fade-in-up delay-1">
                Discover unique homes, experiences, and adventures around the world
            </p>
            <div class="hero-buttons fade-in-up delay-2">
                <a href="/listings" class="btn-explore">
                    Explore Stays
                    <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
        
        <div class="hero-image-container fade-in-right delay-2">
            <div class="phone-mockup">
                <div class="phone-screen">
                    <!-- Phone Content -->
                    <div class="phone-content">
                        <div class="phone-header">
                            <div class="phone-logo">AVAS</div>
                            <div class="phone-menu">
                                <i class="fas fa-bars"></i>
                            </div>
                        </div>
                        <div class="phone-search">
                            <i class="fas fa-search"></i>
                            <span>Find your perfect stay...</span>
                        </div>
                        <div class="phone-card">
                            <div class="phone-card-img luxury"></div>
                            <div class="phone-card-body">
                                <h4>Luxury Villa</h4>
                                <p><i class="fas fa-map-marker-alt"></i> Bali, Indonesia</p>
                                <div class="phone-card-footer">
                                    <span class="phone-price">$150/night</span>
                                    <span class="phone-rating">★ 4.9</span>
                                </div>
                            </div>
                        </div>
                        <div class="phone-card">
                            <div class="phone-card-img beach"></div>
                            <div class="phone-card-body">
                                <h4>Beach House</h4>
                                <p><i class="fas fa-map-marker-alt"></i> Malibu, USA</p>
                                <div class="phone-card-footer">
                                    <span class="phone-price">$220/night</span>
                                    <span class="phone-rating">★ 4.8</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Stats Bar -->
    <div class="stats-bar fade-in-up delay-3">
        <div class="stat-box">
            <div class="stat-value">1,200+</div>
            <div class="stat-label">Properties</div>
        </div>
        <div class="stat-box">
            <div class="stat-value">800+</div>
            <div class="stat-label">Happy Guests</div>
        </div>
        <div class="stat-box">
            <div class="stat-value">60+</div>
            <div class="stat-label">Locations</div>
        </div>
        <div class="stat-box">
            <div class="stat-value">4.8★</div>
            <div class="stat-label">Rating</div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-it-works">
    <div class="section-container">
        <div class="section-heading">
            <h2 class="fade-in">How It Works</h2>
            <p class="fade-in delay-1">Book your perfect stay in 3 simple steps</p>
        </div>
        
        <div class="steps-grid">
            <div class="step-card fade-in-up delay-1">
                <div class="step-number">1</div>
                <div class="step-icon">
                    <i class="fas fa-search"></i>
                </div>
                <h3>Search</h3>
                <p>Browse thousands of verified listings in your desired location</p>
            </div>
            
            <div class="step-card fade-in-up delay-2">
                <div class="step-number">2</div>
                <div class="step-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <h3>Choose</h3>
                <p>Pick the perfect place that matches your style and budget</p>
            </div>
            
            <div class="step-card fade-in-up delay-3">
                <div class="step-number">3</div>
                <div class="step-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3>Book</h3>
                <p>Secure your booking instantly with our easy checkout process</p>
            </div>
        </div>
    </div>
</section>

<!-- App Showcase Section -->
<section class="app-showcase">
    <div class="showcase-container">
        <div class="showcase-content fade-in-left">
            <h2 class="showcase-title">Experience Avas on Mobile</h2>
            <p class="showcase-description">
                Book on the go with our mobile-optimized platform. Access all features from anywhere.
            </p>
            
            <div class="feature-list">
                <div class="feature-item">
                    <i class="fas fa-bolt"></i>
                    <span>Instant Booking</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-bell"></i>
                    <span>Real-time Notifications</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Location Tracking</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-lock"></i>
                    <span>Secure Payments</span>
                </div>
            </div>
            
            <a href="/listings" class="btn-download">
                Get Started
                <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
        
        <div class="showcase-mockup fade-in-right delay-2">
            <div class="mockup-wrapper">
                <div class="mobile-frame">
                    <div class="app-screen">
                        <div class="phone-content">
                            <div class="phone-header">
                                <div class="phone-logo">AVAS</div>
                                <div class="phone-icons">
                                    <i class="fas fa-bell"></i>
                                    <i class="fas fa-user-circle"></i>
                                </div>
                            </div>
                            <h3 class="app-title">Explore</h3>
                            <div class="phone-categories">
                                <span class="cat-pill active">All</span>
                                <span class="cat-pill">Villas</span>
                                <span class="cat-pill">Apartments</span>
                            </div>
                            <div class="listing-grid">
                                <div class="listing-thumb img1"></div>
                                <div class="listing-thumb img2"></div>
                                <div class="listing-thumb img3"></div>
                                <div class="listing-thumb img4"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mobile-frame mobile-frame-secondary">
                    <div class="app-screen">
                        <div class="phone-content">
                            <div class="phone-header">
                                <i class="fas fa-arrow-left"></i>
                                <div class="phone-logo">AVAS</div>
                                <i class="fas fa-heart heart-active"></i>
                            </div>
                            <div class="detail-view">
                                <h3 class="detail-title">Luxury Villa</h3>
                                <p class="detail-location"><i class="fas fa-map-marker-alt"></i> Bali, Indonesia</p>
                                <div class="detail-image"></div>
                                <div class="booking-info">
                                    <div class="info-row">
                                        <span>Check-in</span>
                                        <strong>Dec 15</strong>
                                    </div>
                                    <div class="info-row">
                                        <span>Check-out</span>
                                        <strong>Dec 20</strong>
                                    </div>
                                    <div class="info-row">
                                        <span>Total</span>
                                        <strong class="price-total">$750</strong>
                                    </div>
                                </div>
                                <div class="book-btn">Book Now</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section class="features-modern">
    <div class="section-container">
        <div class="section-heading">
            <h2 class="fade-in">Why Choose Avas</h2>
            <p class="fade-in delay-1">The best platform for your travel needs</p>
        </div>
        
        <div class="features-grid-modern">
            <div class="feature-box fade-in-up delay-1">
                <div class="feature-icon-modern blue">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Verified Properties</h3>
                <p>Every listing is verified for your safety and peace of mind</p>
            </div>
            
            <div class="feature-box fade-in-up delay-2">
                <div class="feature-icon-modern green">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3>Best Price Guarantee</h3>
                <p>Get the best deals with our price match guarantee</p>
            </div>
            
            <div class="feature-box fade-in-up delay-3">
                <div class="feature-icon-modern orange">
                    <i class="fas fa-headphones"></i>
                </div>
                <h3>24/7 Support</h3>
                <p>Our team is always here to help you anytime, anywhere</p>
            </div>
            
            <div class="feature-box fade-in-up delay-4">
                <div class="feature-icon-modern purple">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>Flexible Booking</h3>
                <p>Change or cancel plans easily with flexible options</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-modern">
    <div class="cta-content-wrapper">
        <h2 class="cta-heading fade-in">Ready to Start Your Journey?</h2>
        <p class="cta-text fade-in delay-1">Join thousands of travelers finding their perfect stays</p>
        <div class="cta-buttons fade-in-up delay-2">
            <a href="/listings" class="btn-cta-primary">Browse Listings</a>
            <a href="/listings/new" class="btn-cta-outline">List Your Property</a>
        </div>
    </div>
</section>