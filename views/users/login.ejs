<% layout('layouts/boilerplate') %>
  <div class="auth-bg">
    <div class="auth-card">
      <h1 class="text-center mb-4">Login to Avas</h1>
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control" required minlength="3" maxlength="16"
            pattern="[A-Za-z0-9]+" placeholder="Enter your username">
          <div class="invalid-feedback">Username must be 3-16 characters, letters and numbers only.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control" required
            placeholder="Enter your password">
          <div class="invalid-feedback">Please enter your password to log in.</div>
        </div>
        <button class="btn w-100 mt-2" type="submit">Login</button>
        <a href="/signup" class="switch-link">Don't have an account? Sign up</a>
      </form>
    </div>
  </div>
  <script>
    // Bootstrap validation
    (function () {
      'use strict';
      var forms = document.querySelectorAll('.needs-validation');
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>