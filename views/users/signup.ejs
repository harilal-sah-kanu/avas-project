<% layout('layouts/boilerplate') %>
  <div class="auth-bg">
    <div class="auth-card">
      <h1 class="text-center mb-4">Sign Up to Avas</h1>
      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" id="username" class="form-control" required minlength="3" maxlength="16"
            pattern="[A-Za-z0-9]+" placeholder="Enter your username">
          <div class="form-text">3-16 characters, letters and numbers only.</div>
          <div class="invalid-feedback">Username must be 3-16 characters, letters and numbers only.</div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email ID</label>
          <input type="email" name="email" id="email" class="form-control" required placeholder="Enter your email">
          <div class="invalid-feedback">Email ID is a must!</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control" required minlength="6"
            placeholder="Create a password">
          <div class="invalid-feedback">Password must be at least 6 characters.</div>
        </div>
        <button class="btn w-100 mt-2" type="submit">Signup</button>
        <a href="/login" class="switch-link">Already have an account? Log in</a>
      </form>
    </div>
  </div>