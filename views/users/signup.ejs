<% layout('layouts/boilerplate') %>

  <div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Avas</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="post" class="needs-validation" novalidate>

        <!-- For Username -->
        <div class="mb-3">
          <label for="username" class="form-label">Username: </label><br />
          <input type="text" name="username" id="username" class="form-control" required />
          <div class="valid-feedback">Nice! Username looks good.</div>
          <div class="invalid-feedback">Username must be 3-16 characters, letters and numbers only.</div>
        </div>


        <!-- For Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email ID: </label><br />
          <input type="email" name="email" id="email" class="form-control" required />
          <div class="invalid-feedback">Email ID is a must!</div>
        </div>

        <!-- For Passwords -->
        <div class="mb-3">
          <label for="password" class="form-label">Password: </label><br />
          <input type="password" name="password" id="password" class="form-control" required />
          <div class="invalid-feedback">Password must be at least 8 characters, include a number and a special
            character.</div>
        </div>
        <button class="btn btn-success">Signup</button>
      </form>
    </div>
  </div>