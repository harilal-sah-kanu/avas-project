<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.35rem 0.7rem;
    font-size: 0.95rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.3rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.35rem 0.7rem;
    font-size: 0.92rem;
    min-width: 0;
    width: 100px;
    max-width: 120px;
  }

  .input-group {
    flex-wrap: nowrap;
    width: auto;
    align-items: center;
  }

  .flex-grow-1 {
    flex-grow: 0 !important;
  }

  .mx-2 {
    margin-left: 0.5rem !important;
    margin-right: 0.5rem !important;
  }

  /* Decrease button size and spacing on tablets and below */
  @media (max-width: 1024px) {

    .navbar-nav .btn,
    .navbar-nav form .btn {
      font-size: 0.92rem !important;
      padding: 0.3rem 0.9rem !important;
      border-radius: 0.7rem !important;
      margin: 0.2rem 0.2rem !important;
      min-width: 90px;
      max-width: 140px;
    }

    .navbar-collapse {
      justify-content: center !important;
      text-align: center !important;
    }

    .navbar-nav {
      justify-content: center !important;
      width: 100%;
    }

    .navbar-nav .btn,
    .navbar-nav form .btn {
      display: block;
      margin: 0.4rem auto !important;
      font-size: 0.92rem !important;
      padding: 0.3rem 0.9rem !important;
      border-radius: 0.7rem !important;
      min-width: 90px;
      max-width: 140px;
      text-align: center;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" id="logo" href="/"><img src="/images/avas.jpg" alt="avas_logo" id="logo-brands">avas</a>

    <!-- Search Bar: same style for all devices, fits in one row -->
    <form class="mx-2 flex-shrink-1" role="search" action="/search" method="GET" style="max-width: 180px; width: 100%;">
      <div class="input-group">
        <input type="search" class="form-control search-input" placeholder="Search" name="q" aria-label="Search">
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
    </form>

    <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link btn px-4 btn-animate btn-login" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link btn px-4 btn-animate btn-login" href="/listings/new">Create</a>
        <% if (!currUser) { %>
          <form action="/signup" class="me-2">
            <button class="btn px-4 btn-animate btn-signup"><b>Sign up</b></button>
          </form>
          <form action="/login" class="me-2">
            <button class="btn px-4 btn-animate btn-login"><b>Log in</b></button>
          </form>
          <% } %>
            <% if(currUser) { %>
              <form action="/logout" class="me-2">
                <button class="btn px-4 btn-animate btn-logout"><b>Log out</b></button>
              </form>
              <% } %>
      </div>
    </div>
  </div>
</nav>